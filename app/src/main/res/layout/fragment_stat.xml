<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eprit.tn.cowbot.Fragment.CamFragment"
android:orientation="vertical"
android:background="#ddd">


    <VideoView
        android:id="@+id/Streaming"
        android:layout_width="match_parent"
        android:layout_height="0dp"

    android:layout_weight="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
    android:layout_weight="0.5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginTop="16dp">
        <ImageButton
            android:text="Button"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:id="@+id/zoommoins"
            android:background="@null"
            android:layout_gravity="center_horizontal" android:layout_width="75dp"/>
            <ImageButton
                android:text="Button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:id="@+id/up"
                android:background="@null"
                android:layout_gravity="center_horizontal"/>
            <ImageButton
                android:text="Button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:id="@+id/zoomplus"
                android:background="@null"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginBottom="16dp">
            <ImageButton
                android:text="Button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@null"
                android:layout_margin="5dp"
                android:id="@+id/left"
                />
            <ImageButton
                android:text="Button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@null"
                android:layout_margin="5dp"
                android:id="@+id/down"
                />
            <ImageButton
                android:text="Button"
                android:background="@null"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:id="@+id/right"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
